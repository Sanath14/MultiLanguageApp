<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ChangeLangDialogFragment">

    <RadioGroup
        android:id="@+id/langRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/englishRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            app:buttonTint="@color/black" />

        <RadioButton
            android:id="@+id/hindiRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi"
            app:buttonTint="@color/black" />

        <RadioButton
            android:id="@+id/marathiRadioBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marathi"
            app:buttonTint="@color/black" />
    </RadioGroup>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/black"
        android:paddingHorizontal="32dp"
        android:text="@string/submit_txt"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/langRadioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>